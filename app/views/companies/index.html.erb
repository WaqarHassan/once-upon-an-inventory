<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Dashboard
    <small>Control panel</small>
  </h1>
  <ol class="breadcrumb">
    <li class="active">
      <a href="#">
        <i class="fa fa-home"></i>
        Home Page</a>
    </li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <%= render partial: "/dashboard/status" %>
  <!-- /.row -->

  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Companies (<%= @companies.count %>)</h3>
          <div class="col-md-2 pull-right">
            <%= link_to "Add Company", new_company_path, class: "btn btn-block btn-flat btn-primary pull-right" %>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table class="table table-bordered table-hover" id="distributors">
            <thead>
            <tr>
              <th>Name</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @companies .each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td>
                  <div class = "row">
                    <div class="col-md-2">
                      <%= link_to "edit", edit_company_path(company), class: "btn btn-success btn-flat btn-block btn-xs" %>
                      <%#= link_to "X", company, method: :delete,data: {confirm: 'Are you sure?'}%>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>

            </tbody>
          </table>
      </div>
    </div>
      <!-- /.box -->
    </div>
    <!-- ./col -->
    <!-- ./col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%= render 'layouts/footer' %>
<script>
    $.widget.bridge('uibutton', $.ui.button);
</script>
<script>
    $(function () {
        $("#distributors").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>