<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Invoices (<%= @invoices.try(:count)%>)</h3>
          <div class="col-md-2 pull-right">
            <%= link_to "New Invoice", new_invoice_path, class: "btn btn-block btn-flat btn-primary pull-right" %>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table class="<%= table_classes %>" id= "invoices-datatable", data-source="<%= invoices_path(format: :json) %>">
            <thead>
              <tr>
                <th>Invoice Number</th>
                <th>Patient name</th>
                <th>Age</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
          </table>
          <div class="lsc-pagination">
            <%# <%== pagy_bootstrap_nav(@pagy)%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<br>