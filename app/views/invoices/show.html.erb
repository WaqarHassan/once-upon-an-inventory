<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <div class = "row">
            <%= link_to invoice_pdf_path(@invoice,format: :pdf ) , class: "btn btn-bitbucket pull-right" ,target: "_blank"  do%>
              <span>Generate Pdf</span>
            <%end%>
          </div>
          <p id="notice"><%= notice %></p>
          <div class = "row callout x`callout-custom">
            <div class = "col-md-12">
              <div ju class="col-md-3">
                <strong>Patient name:</strong>
                <%= @invoice.patient_name %>
              </div>
              <div class="col-md-3">
                <strong>Age:</strong>
                <%= @invoice.age %>
              </div>
              <div class="col-md-3">
                <strong>Discount:</strong>
                <%= @invoice.discount %>
              </div>
              <div class="col-md-3">
                <strong>Total:</strong>
                <%= @invoice.total %>
              </div>
            </div>
<!--            <div class="col-md-12">-->
<!--              <div class="col-md-9"></div>-->
<!--              <div class="col-md-3">-->
<!--                <strong>Profit</strong>-->
                <%#= @invoice.get_profit %>
<!--              </div>-->
<!--            </div>-->
          </div>
          <table class="<%= table_classes %>" id="invoices">
            <thead>
            <tr>
              <th>Drug Name</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
              <th>Drug Discount </th>
              <th>Profit </th>
              <th>Profit Amount</th>
<!--              <th>Actions</th>-->
            </tr>
            </thead>

            <tbody>
            <% @invoice_drugs.each do |invoice_drug| %>
              <tr>
                <td><%= invoice_drug.drug_name %></td>
                <td><%= invoice_drug.quantity%></td>
                <td><%= invoice_drug.price %></td>
                <td><%= (invoice_drug.price * invoice_drug.quantity).round(2) %></td>
                <td><%= invoice_drug.discount %> %</td>
                <td><%= invoice_drug.discount - @invoice.discount %> %</td>
                <td><%= invoice_drug.get_profit.round(2) rescue "error" %></td>
<!--                <td><%##= link_to "View ", root_path, class:  "btn btn-block btn-success" %></td>-->
              </tr>
            <% end %>
            </tbody>
            <tfoot style="background: lightsteelblue">
            <tr>
              <th colspan="3" style="text-align:right">Total:</th>
              <th> <%= @invoice.invoice_drugs.map{|id| id.price * id.quantity }.sum.round(2) %> </th>
              <th colspan="2" style="text-align:right">Total:</th>
              <th><%= @invoice.get_profit.round(3) %></th>
            </tr>
            </tfoot>
          </table>


<!--          <%#= link_to 'Edit', edit_invoice_path(@invoice) %> |-->
          <%#= link_to 'Back', invoices_path %>

        </div>
      </div>
    </div>
  </div>
</section>