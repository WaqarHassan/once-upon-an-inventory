                    </th>
                    <th>
                      <i class="ion ion-trash-b"></i>
                    </th> -->
                  </tr>
                </thead>
                <tbody>
                  <% @distributors.all.each do |d|%>
                    <tr>
                      <td><%= d.name%></td>
                      <td><%= d.contact_person %></td>
                      <td><%= d.primary_phone_no%></td>
                      <td><%= d.secondary_phone_number%></td>
                      <td>
                          <%=link_to  "Edit", edit_distributor_path(d) , class: "btn btn-success btn-flat btn-block btn-sm"%>
                        <%= %>
                        <%= %>
                      </td>
                    </tr>
                  <%end%>
                  
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.box -->
        </div>
        <!-- ./col -->
        <!-- ./col -->
      </div>
