    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Dashboard
        <small>Control panel</small>
      </h1>
      <ol class="breadcrumb">
        <li class="active">
          <a href="#">
            <i class="fa fa-home"></i>
            Home Page</a>
        </li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Small boxes (Stat box) -->
      <%= render partial: "/dashboard/status"%>
      <!-- /.row -->

      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Distributors (<%= @distributors.count %>)</h3>
              <div class="col-md-2 pull-right">
                <%= link_to "Add Distributor", new_distributor_path, class: "btn btn-block btn-flat btn-primary pull-right" %>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="table table-bordered table-hover" id= "distributors">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Contact Person</th>
                    <th>Primary Phone Number</th>
                    <th>Secondary Phone Number</th>
                    <th>Actions</th>
                    <!-- <th>
                      <i class="ion ion-log-in"></i>
                    </th>
                    <th>
                      <i class="ion ion-loop"></i>
                    </th>
                    <th>
                      <i class="ion ion-trash-b"></i>
                    </th> -->
                  </tr>
                </thead>
                <tbody>
                  <% @distributors.all.each do |d|%>
                    <tr>
                      <td><%= d.name%></td>
                      <td><%= d.contact_person %></td>
                      <td><%= d.primary_phone_no%></td>
                      <td><%= d.secondary_phone_number%></td>
                      <td>
                        <%=link_to  "edit", edit_distributor_path(d) , class: "btn btn-success btn-flat btn-block btn-xs"%>
                        <%= %>
                        <%= %>
                      </td>
                    </tr>
                  <%end%>
                  
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.box -->
        </div>
        <!-- ./col -->
        <!-- ./col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%= render 'layouts/footer' %>
  <script>
    $.widget.bridge('uibutton', $.ui.button);
  </script>
  <script>
    $(function () {
      $("#distributors").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false
      });
    });
  </script>
