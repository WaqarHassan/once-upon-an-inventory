

    <!-- Main content -->
    <section class="content">
      <!-- Small boxes (Stat box) -->
      <%#= render partial: "/dashboard/status"%>
      <!-- /.row -->

      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Distributors (<%= @distributors.count %>)</h3>
              <div class="col-md-2 pull-right">
                <%= link_to "Add Distributor", new_distributor_path, class: "btn btn-block btn-flat btn-primary pull-right" %>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="<%= table_classes %>" id= "distributors">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Contact Person</th>
                    <th>Primary Phone Number</th>
                    <th>Secondary Phone Number</th>
                    <th>Actions</th>
