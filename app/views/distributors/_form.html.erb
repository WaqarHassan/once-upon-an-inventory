<%= form_for(distributor) do |f| %>
  <% if distributor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(distributor.errors.count, "error") %> prohibited this distributor from being saved:</h2>

      <ul>
      <% distributor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
<!--    <div class="col-md-3"></div>-->
    <div class="col-md-6">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name ,class: "form-control" , required: :true%>
      </div>

      <div class="field">
        <%= f.label :contact_person %>
        <%= f.text_field :contact_person ,class: "form-control", required: :true%>
      </div>

      <div class="field">
        <%= f.label :primary_phone_no %>
        <%= f.number_field :primary_phone_no ,class: "form-control", required: :true %>
      </div>

      <div class="field">
        <%= f.label :secondary_phone_number %>
        <%= f.number_field :secondary_phone_number ,class: "form-control"%>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-submit btn-info pull-right"%>
      </div>
    </div>
  </div>
<% end %>
