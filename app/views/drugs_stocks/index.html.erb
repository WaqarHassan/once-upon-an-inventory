<p id="notice"><%= notice %></p>

<h1>Drugs Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Retail price</th>
      <th>Total price</th>
      <th>Purchase price</th>
      <th>Drugs</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs_stocks.each do |drugs_stock| %>
      <tr>
        <td><%= drugs_stock.retail_price %></td>
        <td><%= drugs_stock.total_price %></td>
        <td><%= drugs_stock.purchase_price %></td>
        <td><%= drugs_stock.drugs %></td>
        <td><%= drugs_stock.company_id %></td>
        <td><%= link_to 'Show', drugs_stock %></td>
        <td><%= link_to 'Edit', edit_drugs_stock_path(drugs_stock) %></td>
        <td><%= link_to 'Destroy', drugs_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

