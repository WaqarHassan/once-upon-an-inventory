<header class="main-header">
  <!-- Logo -->
  <a href="<%= root_url %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
      <b>f</b>inv</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">
      <%= ENV["Clinic_Name"] %>
    </span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
  </nav>
</header>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag("user2-160x160.jpg", class: "img-circle") %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="<%= edit_user_path(current_user.id) %>">
          <i class="fa fa-edit"></i>
          Edit Profile
        </a>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>Log Out
        <% end %>
      </div>

    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li>
        <%= link_to invoices_path do %>
          <i class="fa fa-file"></i>
          <span>Invoices</span>
        <% end %>
      </li>
      <li>
        <%= link_to drugs_path do %>
          <i class="fa fa-medkit"></i>
          <span>Drugs</span>
        <%end%>
      </li>
      <li>
        <%=link_to distributors_path do %>
          <i class="fa fa-user-md"></i>
          <span>Distributors</span>
        <%end%>
      </li>
      <li>
        <%=link_to companies_path do %>
          <i class="fa fa-bar-chart"></i>
          <span>Companies</span>
        <%end%>
      </li>
      <li>
        <%= link_to drugs_stocks_path do %>
          <i class="fa fa-plus"></i>
          <span>Stock History</span>
        <% end %>
      </li>
       <li>
         <%= link_to invoice_drugs_path do %>
          <i class="fa fa-plus"></i>
          <span>Sales History</span>
        <% end %>
      </li>
      <li>
        <%= link_to generate_reports_path do %>
          <i class="fa fa-hospital-o"></i>
          <span>Reports</span>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
